<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/background</item><!--启动背景-->
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:navigationBarColor"></item>&lt;!&ndash;导航栏颜色&ndash;&gt;-->
        <!--<item name="android:statusBarColor"></item>&lt;!&ndash;状态栏颜色&ndash;&gt;-->

        <item name="android:textColor">@color/default_text</item><!--默认字体颜色-->
        <item name="android:textSize">14.0sp</item><!--默认字号-->
        <item name="android:typeface">normal</item><!--默认字体-->
        <!--<item name="android:textScaleX">1.0</item>&lt;!&ndash;字体间距&ndash;&gt;-->
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white1</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
    <!--popupwindow 底部弹出动画-->
    <style name="take_pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_layer</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

</resources>
